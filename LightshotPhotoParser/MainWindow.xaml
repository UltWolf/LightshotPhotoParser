        <Button  Width="200" Height="30" HorizontalAlignment="Center" Content="Download" Margin="297,33,296.6,25.8" Grid.Row="3" Click="Button_Click_1"  />
        <Label Name="Trying" Margin="0,0,665.6,28.8" Content="Count: " />
        <Label Name="PathFileDirectory" HorizontalAlignment="Left" Margin="250,38,0,0" VerticalAlignment="Top" Height="27" Grid.RowSpan="2" Width="324"/>
        <Label Content="" HorizontalAlignment="Left" Margin="340,10,0,0" VerticalAlignment="Top"/>
        <Label Content="                             Path to folder:" HorizontalAlignment="Left" Height="33" Margin="219,0,0,0" VerticalAlignment="Top" Width="278"/>
    </Grid>
</Window>
